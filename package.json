{
  "name": "image_resize_microservice",
  "version": "1.0.0",
  "description": "Image resize microservice",
  "repository": {
    "type": "git",
    "url": "https://github.com/bogdanmelinte/image_resize_microservice"
  },
  "author": "Bogdan Melinte <bogdan.melinte@hotmail.com>",
  "license": "MIT",
  "main": "server.js",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "nyc mocha -r ts-node/register test/*.ts",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "check-disk-space": "^2.1.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-status-monitor": "^1.3.2",
    "express-validator": "^6.4.1",
    "sharp": "^0.25.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/express": "^4.17.6",
    "@types/mocha": "^7.0.2",
    "@types/sharp": "^0.25.0",
    "@types/sinon": "^9.0.0",
    "@types/supertest": "^2.0.9",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "concurrently": "^5.2.0",
    "mocha": "^7.1.2",
    "nodemon": "^2.0.3",
    "nyc": "^15.0.1",
    "sinon": "^9.0.2",
    "supertest": "^4.0.2",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  }
}
